{%- liquid
  assign bg_color = section.settings.background_color
  assign text_color = section.settings.text_color
 
-%}

{% style %}
    #MP--{{ section.id }} {

        {%- unless bg_color == 'rgba(0,0,0,0)' or bg_color == blank -%}
            background-color: {{ bg_color }};
        {%- endunless -%}
    }
    
    #MP--{{ section.id }} h2 {
        text-align: center;
        margin: 0;
    }
{% endstyle %}

<section id="MP--{{ section.id }}">
    <h2>{{ section.settings.title  }}</h2>
</section>

{% schema %}
    {
      "name": "Multi Paragraph Section",
      "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Section Heading",
                "default": "This is a heading"
            },
            {
                "type": "color",
                "label": "Text",
                "id": "text_color",
                "default": "#000000"
            },
            {
                "type": "color",
                "label": "Background",
                "id": "background_color"
            }
      ],
      "blocks": [
        {
            "type": "bigger_paragraph",
            "name": "Bigger Paragraph",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Paragraph Heading",
                    "default": "This is a heading"
                },
                {
                    "type": "richtext",
                    "id": "paragraph",
                    "label": "Paragraph text",
                    "default": "<p>This is a six words paragraph</p>"
                }
            ]
        },
        {
            "type": "smaller_paragraph",
            "name": "Smaller Paragraph",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Paragraph Heading",
                    "default": "This is a heading"
                },
                {
                    "type": "richtext",
                    "id": "paragraph",
                    "label": "Paragraph text",
                    "default": "<p>This is a six words paragraph</p>"
                }
            ]
        }
      ],
      "presets": [
          {
              "name": "Multi Paragraph",
              "category": "Section",
              "blocks":[
                {
                    "type": "bigger_paragraph"
                },
                {
                    "type": "smaller_paragraph"
                }
              ]
          }
      ]
    }
{% endschema %}